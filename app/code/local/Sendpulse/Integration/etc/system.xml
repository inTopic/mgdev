<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <sendpulseintegration translate="label" module="sendpulseintegration">
            <label>SendPulse Integraion</label>
            <sort_order>99999</sort_order>
        </sendpulseintegration>
    </tabs>
    <sections>
        <sendpulseintegration_options_configuration translate="label" module="sendpulseintegration">
            <label>SendPulse Конфигурация</label>
            <tab>sendpulseintegration</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <authorization translate="label" module="sendpulseintegration">
                    <label>Если у вас есть аккаунт в SendPulse, введите логин</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <sendpulseintegration_account>
                            <label>Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Если у вас есть аккаунт в SendPulse, введите логин</comment>
                        </sendpulseintegration_account>
                        <sendpulseintegration_connect translate="label">
                            <frontend_type>button</frontend_type>
                            <frontend_model>sendpulseintegration/adminhtml_system_config_form_authorization</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendpulseintegration_connect>
                    </fields>
                </authorization>
                <registration translate="label" module="sendpulseintegration">
                    <label>Или создайте новый</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <sendpulseintegration_registration_email>
                            <label>Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!--<comment>123</comment>-->
                        </sendpulseintegration_registration_email>

                        <sendpulseintegration_registration_phone>
                            <label>Phone</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!--<comment>phone</comment>-->
                        </sendpulseintegration_registration_phone>

                        <sendpulseintegration_registration_name>
                            <label>Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!--<comment>name</comment>-->
                        </sendpulseintegration_registration_name>

                        <sendpulseintegration_registration_password>
                            <label>Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!--<comment>Password</comment>-->
                        </sendpulseintegration_registration_password>

                        <sendpulseintegration_registration_confirm_password>
                            <label>Confirm Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!--<comment>Configrm Password</comment>-->
                        </sendpulseintegration_registration_confirm_password>

                        <sendpulseintegration_registration_button translate="label">
                            <frontend_type>button</frontend_type>
                            <frontend_model>sendpulseintegration/adminhtml_system_config_form_registration</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendpulseintegration_registration_button>
                    </fields>
                </registration>
            </groups>
        </sendpulseintegration_options_configuration>
        <sendpulseintegration_options_export translate="label" module="sendpulseintegration">
            <label>Экспорт Клиентов</label>
            <tab>sendpulseintegration</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <export translate="label" module="sendpulseintegration">
                    <label>Экспорт клиентов</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <sendpulseintegration_customers>
                            <label>Адрессная книга</label>
                            <frontend_type>select</frontend_type>
                            <source_model>sendpulseintegration/adminhtml_system_config_form_customers</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendpulseintegration_customers>
                        <sendpulseintegration_export translate="label">
                            <frontend_type>button</frontend_type>
                            <frontend_model>sendpulseintegration/adminhtml_system_config_form_export</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendpulseintegration_export>
                    </fields>
                </export>
            </groups>
        </sendpulseintegration_options_export>
    </sections>
</config>